<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ViewMaterial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sort"
    android:padding="12dp"
    android:layout_margin="6dp">

    <!-- Название материала -->
    <TextView
        android:id="@+id/textProvider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Компания"
        android:textSize="21sp"
        android:textStyle="bold"
        android:fontFamily="@font/calibri"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editMaterial"
        app:layout_constraintHorizontal_bias="0.0"/>

    <!-- Иконка для редактирования -->
    <TextView
        android:id="@+id/editMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✎"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/typeLabelMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Материал: "
        android:textStyle="bold"
        android:textSize="17sp"
        android:fontFamily="@font/calibri"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/textProvider"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Тип материала -->
    <TextView
        android:id="@+id/textMaterial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Бетон"
        android:textSize="17sp"
        android:fontFamily="@font/calibri"
        android:paddingStart="4dp"
        app:layout_constraintTop_toTopOf="@id/typeLabelMaterial"
        app:layout_constraintStart_toEndOf="@id/typeLabelMaterial"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/typeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата получения: "
        android:textStyle="bold"
        android:textSize="17sp"
        android:fontFamily="@font/calibri"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/typeLabelMaterial"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Тип материала -->
    <TextView
        android:id="@+id/textTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="04.12.2025"
        android:textSize="17sp"
        android:fontFamily="@font/calibri"
        android:paddingStart="4dp"
        app:layout_constraintTop_toTopOf="@id/typeLabel"
        app:layout_constraintStart_toEndOf="@id/typeLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Метка "Количество:" -->
    <TextView
        android:id="@+id/quantityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество: "
        android:textStyle="bold"
        android:textSize="17sp"
        android:fontFamily="@font/calibri"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/typeLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Количество -->
    <TextView
        android:id="@+id/textUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4065 шт"
        android:textSize="17sp"
        android:fontFamily="@font/calibri"
        android:paddingStart="4dp"
        app:layout_constraintTop_toTopOf="@id/quantityLabel"
        app:layout_constraintStart_toEndOf="@id/quantityLabel"/>

</androidx.constraintlayout.widget.ConstraintLayout>
